/* pages/top-bar-template/top-bar-template.wxss */

.top-bar {
  display: flex;
  align-items: center;
  width: 100%;
  height: 70rpx;
  background: #fff;
  /* border-bottom: 1px solid #ddd; */
  position: fixed;
  z-index: 9;
  top: 0;
}

.nav-item {
  width: 20%;
  text-align: center;
  font-size: 28rpx;
  padding: 16rpx;
}

.nav-item-active {
  color: #3f98f6;
  border-radius: 4rpx;
  border-bottom: 2px solid #3f98f6;
}
